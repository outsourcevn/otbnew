@model IEnumerable<WebTMDT.Models.Local>

@{
    ViewBag.Title = "Quản lý quận/huyện";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/Theme/admin/vendor/datatable/dataTables.bootstrap.min.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h3>@ViewBag.Title</h3>
        </div>
        <p>
            @Html.ActionLink("Thêm mới quận/huyện", "Create", null, new { @class = "btn btn-primary" })
        </p>
        <table class="table" id="table-dmqh">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("Nhập tên quận/huyện")
                    </th>
                    <th>
                        @Html.DisplayName("Danh mục cha")
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.F2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Local2.F2)
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.F1 }) |
                            @*@Html.ActionLink("Details", "Details", new { id=item.F1 }) |*@
                            @Html.ActionLink("Xóa", "Delete", new { id = item.F1 })
                        </td>
                    </tr>
                }
            </tbody>

        </table>


    </div>
</div>

<script src="~/Content/Theme/admin/vendor/datatable/jquery.dataTables.min.js"></script>
<script src="~/Content/Theme/admin/vendor/datatable/dataTables.bootstrap.min.js"></script>
<script>
    $(document).ready(function () {
        $('#table-dmqh').DataTable();
    });
</script>